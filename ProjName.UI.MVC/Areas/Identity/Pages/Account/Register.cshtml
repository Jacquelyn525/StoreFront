@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <h1>Register</h1>
                    <p>Create a new account</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end breadcrumb section -->

<div class="contact-form-section mt-150 mb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 mb-5 mb-lg-0">
                <div class="form-title">
                    <h2>Enter your Info below to register</h2>
                    <p>
                        Register an account with us so we can help you find the right supplies!
                    </p>
                </div>
                <div class="contact-form">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <p>
                            <input asp-for="Input.FirstName" placeholder="First Name" autocomplete="FirstName" aria-required="true" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            <input asp-for="Input.LastName" placeholder="Last Name" autocomplete="LastName" aria-required="true" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </p>
                        <p>
                            <input asp-for="Input.Address" placeholder="Address" autocomplete="Address" aria-required="true" />
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                            <input asp-for="Input.City" placeholder="City" autocomplete="City" />
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </p>
                        <p>
                            <input asp-for="Input.State" placeholder="State" autocomplete="State" />
                            <span asp-validation-for="Input.State" class="text-danger"></span>
                            <input asp-for="Input.Zip" placeholder="Zip" autocomplete="Zip" />
                            <span asp-validation-for="Input.Zip" class="text-danger"></span>
                        </p>
                        <p>
                            <input asp-for="Input.Phone" placeholder="Phone" autocomplete="Phone" />
                            <span asp-validation-for="Input.Phone" class="text-danger"></span>
                            <input asp-for="Input.Email" placeholder="Email" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </p>
                        <p>
                            <input asp-for="Input.Password" placeholder="Password" autocomplete="new-password" aria-required="true" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                            <input asp-for="Input.ConfirmPassword" placeholder="Confirm Password" autocomplete="new-password" aria-required="true" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </p>
                        <p><input id="registerSubmit" type="submit" value="Register"></p>
                    </form>
                </div>
            </div>

        </div>

    </div>
</div>
